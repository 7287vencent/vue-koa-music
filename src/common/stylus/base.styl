* 
  margin 0
  padding 0

html,body 
  line-height 1
  font-weight normal
  font-family 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', Arial, sans-serif

button:focus
  outline 0

button 
  background-color: transparent;
  border 0px solid #fff

input[type=rang]:focus
  outline 0 
input[type=range]
  -webkit-appearance none
  margin 0
  width 100%
  background none
  // position absolute
  // bottom 40px
  // left 0
input[type=range]::-webkit-slider-runnable-track
  width 100%
  height 2px
  cursor pointer
  background-color #39404d
  border-radius 1px
input[type=range]::-webkit-slider-thumb 
  -webkit-appearance: none
  border: 1px solid #ff7600
  height: 8px
  width: 8px
  border-radius: 50%
  background: #fd9500
  cursor: pointer
  margin-top: -2px
