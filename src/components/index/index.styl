.page
  padding-top 36px

.list
  width 100%
  padding 6px 5px
  box-sizing border-box
  display flex
  font-size 16px
  color #ffffff
  .id
    flex 0 0 30px
    font-size 20px
    text-align center
    height 34px
    line-height 34px
  .name-artist
    flex 1
    display flex
    flex-direction column
    .name
      color #fd8e0d
      padding-bottom 6px 
    .artist
      font-size 12px
  .duration-poster
    flex 0 0 70px
    display flex
    align-items center
    justify-content space-around
    .duration
      font-size 12px
    .poster
      border-radius 50%