input[type=range]
  position absolute
  left 0
  bottom 40px

.page
  text-align center
  .disc
    position relative
    padding-top 100px
    img 
      border-radius 50% 
      border 1px solid #fd9708
      padding 6px
      // transform rotate(10deg)
    // img.play
    //   animation circle 10s linear infinite both
    .duration
      position absolute
      left 50%
      transform translateX(-50%)
      bottom 6px
      color #fd9708
  .title
    color #fd9708
    font-size 24px
  .artist
    height 30px
    line-height 30px
  .lyric
    font-size 16px
    line-height 30px
    position absolute
    left 0
    bottom 40px
    width 100%
    .previous, .next
      color #6c6c6c
    .current
      font-size 18px
  .controls
    width 100%
    height 40px
    line-height 40px
    color #fd9708
    position absolute
    bottom 0
    display flex
    justify-content space-around
    button 
      color #fd9708
      .iconfont
        font-size 24px
     
@keyframes circle
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)